<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ActivityPointInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.utils.edit_point_maps.ActivityPointInfo">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical">

    <TextView
        android:id="@+id/txtInfoPointTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/txtTitleNewPoint"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/infoLatLon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="10sp" />
<!--
    <TextView
        android:id="@+id/txtInfoPointName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/txtPointName"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/infoPointName"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="8dp"
        android:background="@color/fEditText"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:minHeight="28sp"
        android:hint="@string/noDatas"
        android:inputType="text" />
        -->



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="1sp"
        android:paddingRight="8sp"
        android:text="@string/txtOwnerName"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/infoOwnerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:minHeight="20sp"
        android:hint="@string/noDatas"
        android:inputType="text"
        android:paddingLeft="1sp"
        android:paddingRight="8sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="1sp"
        android:paddingRight="8sp"
        android:text="@string/txt_landMark"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/infoLendMark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:minHeight="10sp"
        android:hint="@string/noDatas"
        android:inputType="text"
        android:paddingLeft="1sp"
        android:paddingRight="8sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="1sp"
        android:paddingRight="8sp"
        android:text="@string/txtFindOwnwe"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="left"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtAmbar"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/infoAmbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="@string/noDatas"
            android:inputType="textMultiLine"
            android:minHeight="10sp"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtPhoneNum" />

        <TextView
            android:id="@+id/infoAmbarPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/noDatas"
            android:inputType="phone"
            android:minHeight="18sp"
            android:textSize="12sp" />
      </LinearLayout>

      <View
          android:id="@+id/divider3"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="1" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Бухгалтерия" />

        <TextView
            android:id="@+id/infoOffice"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="12sp"
            android:minHeight="18sp"
            android:hint="@string/noDatas"
            android:inputType="textMultiLine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/txtPhoneNum" />

        <TextView
            android:id="@+id/infoOfficePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:minHeight="18sp"
            android:hint="@string/noDatas"
            android:inputType="phone" />
      </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:text="@string/txtVisitTime" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_gravity="right"
          android:gravity="center_horizontal"
          android:paddingLeft="4dp"
          android:paddingRight="4dp"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtFrom"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/infoStartWorHouer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textSize="12sp" />
        <TextView
            android:id="@+id/infoStartWorMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtTo"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/infoFinWorkHouer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textSize="12sp" />
        <TextView
            android:id="@+id/infoFinWorkMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="12sp" />

      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/txtNewStrike"
            android:textSize="12sp" />
      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_gravity="right"
          android:gravity="center_horizontal"
          android:paddingLeft="4dp"
          android:paddingRight="4dp"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtFrom"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/infoNewStartStrikeHouer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textSize="12sp" />
        <TextView
            android:id="@+id/infoStartSyrikeMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtTo"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/infoFinStrikeHouer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textSize="12sp" />
        <TextView
            android:id="@+id/infoFinStrileMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="12sp" />


      </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:orientation="vertical">

        <TextView
            android:id="@+id/infoRepresenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="8sp"
            android:paddingRight="1sp"
            android:text="@string/txtPresenter" />

        <TextView
            android:id="@+id/tvInfoActivSalePoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8sp"
            android:paddingRight="1sp"
            android:text="@string/hintNoAnySelected"
            android:textSize="12sp" />


      </LinearLayout>

      <View
          android:id="@+id/divider2"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="1" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

        <TextView
            android:id="@+id/infoZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="1sp"
            android:paddingRight="8sp"
            android:text="@string/txtZone" />

        <TextView
            android:id="@+id/infoActiveZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingLeft="1sp"
            android:paddingRight="8sp"
            android:text="@string/hintNoAnySelected"
            android:textSize="12sp" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"></LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

      <Button
          android:id="@+id/btnCorrection"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@color/tetGreen"
          android:layout_weight="1"
          android:text="@string/txtCorrect" />

      <Button
          android:id="@+id/btnClose"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@color/tetAccent"
          android:layout_weight="1"
          android:text="@string/close" />
    </LinearLayout>


  </LinearLayout>


  </LinearLayout>