<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtNewPointTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/txtTitleNewPoint"
        android:textSize="16sp" />

        <TextView
            android:id="@+id/LatLon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="10sp" />

    <TextView
        android:id="@+id/txtNewPointName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/txtPointName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edNewPoinyName"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="8dp"
        android:background="@color/fEditText"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:minHeight="28sp"
        android:hint="@string/additing"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pointRepresenterNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="8sp"
                android:paddingRight="1sp"
                android:text="@string/txtPresenter" />

            <TextView
                android:id="@+id/tvActivSalePoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8sp"
                android:paddingRight="1sp"
                android:text="@string/hintNoAnySelected"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnShowSalePoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tvShowAll"
                android:textSize="10sp" />


        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/poiyZoneNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="1sp"
                android:paddingRight="8sp"
                android:text="@string/txtZone" />

            <TextView
                android:id="@+id/activeZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingLeft="1sp"
                android:paddingRight="8sp"
                android:text="@string/hintNoAnySelected"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnShowZonePoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tvShowAll"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="1sp"
        android:paddingRight="8sp"
        android:text="@string/txtOwnerName"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/edNewOwnerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:minHeight="20sp"
        android:hint="@string/additing"
        android:inputType="text"
        android:paddingLeft="1sp"
        android:paddingRight="8sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="1sp"
        android:paddingRight="8sp"
        android:text="@string/txt_landMark"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/lendMark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:minHeight="10sp"
        android:hint="@string/additing"
        android:inputType="text"
        android:paddingLeft="1sp"
        android:paddingRight="8sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="1sp"
        android:paddingRight="8sp"
        android:text="@string/txtFindOwnwe"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/txtAmbar" />

            <EditText
                android:id="@+id/edNewAmbar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="@string/additing"
                android:inputType="textMultiLine"
                android:minHeight="10sp"
                android:textSize="12sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtPhoneNum" />

            <EditText
                android:id="@+id/edNewAmbarPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:minHeight="18sp"
                android:hint="@string/additing"
                android:inputType="phone" />
        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Бухгалтерия" />

            <EditText
                android:id="@+id/edNewOffice"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textSize="12sp"
                android:minHeight="18sp"
                android:hint="@string/additing"
                android:inputType="textMultiLine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/txtPhoneNum" />

            <EditText
                android:id="@+id/edNewOfficePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:minHeight="18sp"
                android:hint="@string/additing"
                android:inputType="phone" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/txtVisitTime" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:gravity="center_horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="14sp"
                android:layout_height="20sp"
                android:text="@string/txtFrom"
                android:textSize="12sp" />

            <Spinner
                    android:id="@+id/spinNewStartWorkHouers"
                    android:layout_width="24sp"
                    android:layout_height="20sp"
                    android:textSize="12sp" />
            <EditText
                android:id="@+id/edtNewStartWorHouer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textSize="12sp" />
            <EditText
                android:id="@+id/edtNewStartWorMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinStartWorkMinutes"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="24sp"
                android:layout_height="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtTo"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinFinWorkHouer"
                android:layout_width="24sp"
                android:layout_height="17dp" />
            <EditText
                android:id="@+id/edtFinWorkHouer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textSize="12sp" />
            <EditText
                android:id="@+id/edtFinWorkMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinFinWorkMinutes"
                android:layout_width="24sp"
                android:layout_height="20sp"
                android:textSize="12sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/txtNewStrike"
            android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:gravity="center_horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="14sp"
                android:layout_height="20sp"
                android:text="@string/txtFrom"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinNewStartStrikeHouer"
                android:layout_width="24sp"
                android:layout_height="20sp"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/edtNewStartStrikeHouer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textSize="12sp" />
            <EditText
                android:id="@+id/edtNewStartSyrikeMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinStartStrikeMinutes"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="24sp"
                android:layout_height="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtTo"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinNewStopStrikeHouer"
                android:layout_width="24sp"
                android:layout_height="20sp" />
            <EditText
                android:id="@+id/edtFinStrikeHouer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textSize="12sp" />
            <EditText
                android:id="@+id/edtFinStrileMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinNewStopStrikeMin"
                android:layout_width="24sp"
                android:layout_height="20sp"
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSavePoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/tetGreen"
            android:layout_weight="1"
            android:text="@string/save" />

        <Button
            android:id="@+id/btnDoNotSavePoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/tetAccent"
            android:layout_weight="1"
            android:text="@string/doNotSave" />
    </LinearLayout>


</LinearLayout>


</ScrollView>